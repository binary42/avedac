<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xms512M -Xmx1024M -classpath %classpath org.mbari.aved.ui.Application</exec.args>
                <maven.test.skip>true</maven.test.skip>
                
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xms512M -Xmx1024M -classpath %classpath org.mbari.aved.ui.Application</exec.args>
                <jpda.listen>true</jpda.listen>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug.single</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <maven.test.skip>true</maven.test.skip>
                <exec.args>-Xdebug -Dmaven.mode.online=false -Djava.compiler=none -Xnoagent -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <jpda.stopclass>${packageClassName}</jpda.stopclass>
                <exec.executable>java</exec.executable>
                
                
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -Xms512M -Xmx1024M -classpath %classpath org.mbari.aved.ui.Application</exec.args>
                <profiler.action>profile</profiler.action>
                <exec.executable>${profiler.java}</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-OSX package</actionName>
            <displayName>OSX package</displayName>
            <goals>
                <goal>package</goal>
                <goal>osxappbundle:bundle</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </action>
    </actions>
